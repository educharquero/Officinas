/* Ajusta a largura máxima do conteúdo */
.wy-nav-content {
    max-width: 1200px !important; /* largura maior que o padrão (~800px) */
    margin: 0 auto;              /* centraliza o conteúdo */
    padding: 0 20px;             /* espaçamento lateral */
}

/* Garante que o wrapper também siga o ajuste */
.wy-nav-content-wrap {
    max-width: 100% !important;
}

